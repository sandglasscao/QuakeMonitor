<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/license_no"
        android:layout_width="257dp"
        android:layout_height="64dp"
        android:layout_margin="20dp"
        android:hint="@string/license_lbl"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        tools:layout_editor_absoluteY="24dp"
        tools:layout_editor_absoluteX="49dp"/>

    <Button
        android:id="@+id/license_ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@android:string/ok"
        app:layout_constraintLeft_toLeftOf="@+id/license_no"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/license_no"/>

    <Button
        android:id="@+id/license_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:text="@android:string/cancel"
        app:layout_constraintBottom_toBottomOf="@+id/license_ok_btn"
        app:layout_constraintRight_toRightOf="@+id/license_no"
        app:layout_constraintTop_toTopOf="@+id/license_ok_btn"
        app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>