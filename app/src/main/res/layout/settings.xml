<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/platform_apl_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/platform_thrshld"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        />

    <View
        android:id="@+id/splitter1"
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@+id/platform_apl_lbl"
        tools:layout_editor_absoluteX="8dp"/>

    <TextView
        android:id="@+id/platform_level1_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/splitter1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/platform_apl_lbl"
        android:layout_marginStart="8dp"/>

    <EditText
        android:id="@+id/platform_level1"
        android:layout_width="51dp"
        android:layout_height="43dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:text="20"
        app:layout_constraintBottom_toBottomOf="@+id/platform_level1_lbl"
        app:layout_constraintLeft_toRightOf="@+id/platform_level1_lbl"
        app:layout_constraintTop_toTopOf="@+id/platform_level1_lbl"/>

    <TextView
        android:id="@+id/platform_level2_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_2"
        app:layout_constraintLeft_toRightOf="@+id/platform_level1"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/splitter1"
        android:layout_marginStart="64dp"/>

    <EditText
        android:id="@+id/platform_level2"
        android:layout_width="51dp"
        android:layout_height="43dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:text="40"
        app:layout_constraintBottom_toBottomOf="@+id/platform_level2_lbl"
        app:layout_constraintLeft_toRightOf="@+id/platform_level2_lbl"
        app:layout_constraintTop_toTopOf="@+id/platform_level2_lbl"/>

    <TextView
        android:id="@+id/track_apl_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/track_thrshld"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/platform_level1"/>

    <View
        android:id="@+id/splitter2"
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="#000"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/track_apl_lbl"/>

    <TextView
        android:id="@+id/track_level1_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/splitter2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/track_apl_lbl"
        android:layout_marginStart="8dp"/>

    <EditText
        android:id="@+id/track_level1"
        android:layout_width="51dp"
        android:layout_height="43dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:text="20"
        app:layout_constraintBottom_toBottomOf="@+id/track_level1_lbl"
        app:layout_constraintLeft_toRightOf="@+id/track_level1_lbl"
        app:layout_constraintTop_toTopOf="@+id/track_level1_lbl"/>

    <TextView
        android:id="@+id/track_level2_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_2"
        app:layout_constraintLeft_toRightOf="@+id/track_level1"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/splitter2"
        android:layout_marginStart="64dp"/>

    <EditText
        android:id="@+id/track_level2"
        android:layout_width="51dp"
        android:layout_height="43dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:text="40"
        app:layout_constraintBottom_toBottomOf="@+id/track_level2_lbl"
        app:layout_constraintLeft_toRightOf="@+id/track_level2_lbl"
        app:layout_constraintTop_toTopOf="@+id/track_level2_lbl"/>

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/track_level1"
        android:layout_marginStart="64dp"/>

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        app:layout_constraintLeft_toRightOf="@+id/ok_btn"
        android:layout_marginLeft="37dp"
        app:layout_constraintTop_toTopOf="@+id/ok_btn"
        app:layout_constraintBottom_toBottomOf="@+id/ok_btn"
        android:layout_marginRight="64dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="64dp"/>


    <View
        android:id="@+id/splitter3"
        android:layout_width="368dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@+id/cancel_btn"
        tools:layout_editor_absoluteX="8dp"/>


    <Button
        android:id="@+id/del_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:text="清空记录"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splitter3"/>


</android.support.constraint.ConstraintLayout>